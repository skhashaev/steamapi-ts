{
  "name": "steamapi-ts",
  "version": "0.0.1",
  "description": "Steam API powered by TypeScript",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "dev": "node --loader ts-node/esm src/index.ts",
    "generate-api-types": "tsx src/generate-api-types.ts",
    "fetch-api": "tsx src/fetch-api.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "steam",
    "api",
    "typescript"
  ],
  "author": "Shamil Khashaev",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.7.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skhashaev/steamapi-ts.git"
  },
  "bugs": {
    "url": "https://github.com/skhashaev/steamapi-ts/issues"
  },
  "homepage": "https://github.com/skhashaev/steamapi-ts#readme"
}
